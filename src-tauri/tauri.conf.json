{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "chorder",
  "version": "0.1.0",
  "identifier": "dev.kodespresso.chorder",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Chorder",
        "width": 800,
        "height": 800,
        "decorations": false,
        "alwaysOnTop": true,
        "center": true,
        "dragDropEnabled": false,
        "focus": true,
        "maximizable": false,
        "resizable": false,
        "windowClassname": "chorder",
        "visibleOnAllWorkspaces": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
